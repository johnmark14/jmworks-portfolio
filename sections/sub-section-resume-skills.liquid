<div>
    <h2 class="yb-section-title  uk-heading-line " id="{{ section.settings.section-id }}">
      <span>{{ section.settings.section-title }}</span>
    </h2>
    <div class="yb-margin-top-1 yb-margin-bottom-2">
        <div class="uk-grid-collapse  uk-child-width-1-2 uk-child-width-1-3@s uk-child-width-1-4@m uk-text-center" data-uk-grid>
            {% for block in section.blocks %}
                {% assign index =  forloop.index | modulo:  2 %}
                <div {% if block.settings.skill-bg != 0 %} class="yb-bg-soft" {% endif %}>
                    <div class="yb-box-circle">
                        <div class="circle-progress " data-value="{{ block.settings.skill-range | times: 0.01}}">
                        <strong>{{ block.settings.skill-range }}<i>%</i></strong>
                        </div>
                        <h5 class="yb-box-circle-title">{{ block.settings.skill-title }}</h5>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div data-uk-grid class="uk-child-width-1-2">
            <div>
            <h4 class="yb-section-title">Soft Skills</h4>
            <ul class="uk-list uk-list-large  uk-list-divider">
                <li>
                <div class="yb-resume-skill-item">
                    <h5>
                    Problem Solving <small 
                    class="uk-float-right uk-text-bold uk-visible@s">{{ section.settings.problem-solving-range }}%</small>
                    </h5>
                    <progress class="uk-progress" value="{{ section.settings.problem-solving-range }}" max="100"></progress>
                </div>
                </li>
                <li>
                <div class="yb-resume-skill-item">
                    <h5>
                    Creativity <small class="uk-float-right uk-text-bold uk-visible@s">{{ section.settings.creativity-range }}%</small>
                    </h5>
                    <progress class="uk-progress" value="{{ section.settings.creativity-range }}" max="100"></progress>
                </div>
                </li>
                <li>
                <div class="yb-resume-skill-item">
                    <h5>
                    Time Management <small class="uk-float-right uk-text-bold uk-visible@s">{{ section.settings.time-management-range }}%</small>
                    </h5>
                    <progress class="uk-progress" value="{{ section.settings.time-management-range }}" max="100"></progress>
                </div>
                </li>
                <li>
                <div class="yb-resume-skill-item">
                    <h5>
                    Team Work <small class="uk-float-right uk-text-bold uk-visible@s">{{ section.settings.team-work-range }}%</small>
                    </h5>
                    <progress class="uk-progress" value="{{ section.settings.team-work-range }}" max="100"></progress>
                </div>
                </li>
            </ul>
            </div>
            <div>
            <h4 class="yb-section-title">Language </h4>
            <ul class="uk-list uk-list-large uk-list-divider">
                <li>
                    <div class="yb-resume-skill-item">
                        <h5>
                            English <small class="uk-float-right uk-text-bold uk-visible@s">{{ section.settings.english-range }}%</small>
                        </h5>
                        <progress class="uk-progress" value="{{ section.settings.english-range }}" max="100"></progress>
                    </div>
                </li>
                <!-- <li>
                <div class="yb-resume-skill-item">
                    <h5>
                    French <small class="uk-float-right uk-text-bold uk-visible@s">70%</small>
                    </h5>
                    <progress class="uk-progress" value="70" max="100"></progress>
                </div>
                </li>
                <li>
                <div class="yb-resume-skill-item">
                    <h5>
                    Chinese <small class="uk-float-right uk-text-bold uk-visible@s">80%</small>
                    </h5>
                    <progress class="uk-progress" value="80" max="100"></progress>
                </div>
                </li> -->
            </ul>
            </div>
        </div>
    </div>
</div>

{% schema %}
{
    "name": "Resume Skills",
    "settings": [
        {
            "type": "text",
            "id": "section-id",
            "label": "Section ID"
        },
        {
            "type": "text",
            "id": "section-title",
            "label": "Section Title"
        },
        {
            "type": "header",
            "content": "Soft Skills"
        },
        {
            "type": "range",
            "id": "problem-solving-range",
            "label": "Problem Solving",
            "max": 100,
            "min": 10,
            "step": 2,
            "default": 50
        },
        {
            "type": "range",
            "id": "creativity-range",
            "label": "Creativity",
            "max": 100,
            "min": 10,
            "step": 2,
            "default": 50
        },
        {
            "type": "range",
            "id": "time-management-range",
            "label": "Time Management",
            "max": 100,
            "min": 10,
            "step": 2,
            "default": 50
        },
        {
            "type": "range",
            "id": "team-work-range",
            "label": "Team Work",
            "max": 100,
            "min": 10,
            "step": 2,
            "default": 50
        },
        {
            "type": "header",
            "content": "Language"
        },
        {
            "type": "range",
            "id": "english-range",
            "label": "English",
            "max": 100,
            "min": 10,
            "step": 2,
            "default": 50
        }
    ],
    "blocks": [
        {
            "name": "Skills",
            "type": "skills",
            "settings": [
                {
                    "type": "checkbox",
                    "id": "skill-bg",
                    "label": "Skill BG",
                    "default": true
                },
                {
                    "type": "text",
                    "id": "skill-title",
                    "label": "Skill Title"
                },
                {
                    "type": "range",
                    "id": "skill-range",
                    "max": 100,
                    "min": 50,
                    "step": 1,
                    "unit": "%",
                    "label": "Skill Range",
                    "default": 50
                }
            ]
        }
    ]
}
{% endschema %}